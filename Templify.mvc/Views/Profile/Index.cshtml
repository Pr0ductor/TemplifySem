@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer
@model Templify.mvc.Models.ProfileModel
@{ ViewData["Title"] = @Localizer["MyProfile"]; }

<div style="max-width: 1200px; margin: 0 auto;">
    <!-- Main profile block -->
    <div style="background: #181a1b; border-radius: 24px; padding: 40px; margin-bottom: 48px; border: 2px solid #23272a;">
        <div style="display: grid; grid-template-columns: auto 1fr auto; gap: 40px; align-items: center; margin-bottom: 32px;">
            <!-- Left - Avatar -->
            <div style="width: 120px; height: 120px; border-radius: 20px; overflow: hidden; background: #232526;">
                @if (!string.IsNullOrEmpty(Model.Avatar))
                {
                    <img src="@Url.Content(Model.Avatar)" alt="@Model.DisplayName" style="width: 100%; height: 100%; object-fit: cover;">
                }
                else
                {
                    <div style="width: 100%; height: 100%; display: flex; align-items: center; justify-content: center; background: linear-gradient(135deg, #00ff88 0%, #00e0ff 100%); color: #111; font-size: 2.5rem; font-weight: 800;">
                        @(Model.Username.Length > 0 ? Model.Username[0] : 'U')
                    </div>
                }
            </div>
            <!-- Center - Info -->
            <div>
                <h1 style="color: #fff; font-size: 2.5rem; font-weight: 800; margin: 0 0 8px 0;">@Model.DisplayName</h1>
                <p style="color: #ccc; font-size: 1.2rem; margin: 0 0 24px 0;">@Model.Email</p>
                @if (!string.IsNullOrEmpty(Model.Description))
                {
                    <p style="color: #ccc; font-size: 1rem; margin: 0 0 24px 0; line-height: 1.6;">@Model.Description</p>
                }
                <div style="display: flex; align-items: center; gap: 32px; margin-bottom: 16px;">
                    <div style="display: flex; align-items: center; gap: 8px;">

                        
                    </div>

                </div>
                @if (Model.Roles.Any())
                {
                    <div style="display: flex; gap: 8px; margin-top: 16px;">
                        @foreach (var role in Model.Roles)
                        {
                            <span style="background: #00ff88; color: #111; padding: 4px 12px; border-radius: 20px; font-size: 0.9rem; font-weight: 600;">
                                @role
                            </span>
                        }
                    </div>
                }
            </div>
            <!-- Right - Actions -->
            <div style="text-align: center;">
                <h3 style="color: #fff; font-size: 1.2rem; font-weight: 600; margin: 0 0 16px 0;">@Localizer["Actions"]</h3>
                <div style="display: flex; flex-direction: column; gap: 12px; margin-bottom: 24px;">
                    <a asp-controller="Settings" asp-action="Index" style="text-decoration: none; color: inherit;">
                        <button type="button" style="background: #232526; color: #fff; border: 1px solid #2e2e32; border-radius: 10px; padding: 12px 20px; font-weight: 600; font-size: 0.9rem; cursor: pointer; display: flex; align-items: center; justify-content: center; gap: 8px; width: 200px;">
                            <i class="ri-settings-3-line"></i> @Localizer["Settings"]
                        </button>
                    </a>
                </div>
                <form asp-controller="Auth" asp-action="Logout" method="post" style="margin: 0;">
                    <button type="submit" style="background: linear-gradient(90deg,#ff4444 0%,#ff6666 100%); color: #fff; border: none; border-radius: 12px; padding: 12px 24px; font-weight: 700; font-size: 1rem; cursor: pointer; display: flex; align-items: center; justify-content: center; gap: 8px; width: 200px;">
                        <i class="ri-logout-box-r-line"></i> @Localizer["Logout"]
                    </button>
                </form>
            </div>
        </div>
        
        <hr style="border: none; border-top: 1px solid #23272a; margin: 32px 0;">
        
        <div>
            <h3 style="color: #fff; font-size: 1.8rem; font-weight: 700; margin-bottom: 16px;">@Localizer["Aboutprofile"]:</h3>
            <p style="color: #ccc; line-height: 1.7; font-size: 1.1rem; margin-bottom: 24px;">
                @Localizer["Welcometo"]
            </p>
            
            <h3 style="color: #fff; font-size: 1.8rem; font-weight: 700; margin-bottom: 16px;">@Localizer["Accountinformation"]:</h3>
            <div style="background: #232526; padding: 20px; border-radius: 12px; border: 1px solid #2e2e32; margin-bottom: 24px;">
                <h4 style="color: #00ff88; font-size: 1.1rem; margin: 0 0 12px 0;">@Localizer["Accountinformation"]</h4>
                <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 16px;">
                    <p style="color: #ccc; margin: 0 0 8px 0;"><strong>@Localizer["Username"]:</strong> @Model.Username</p>
                    <p style="color: #ccc; margin: 0 0 8px 0;"><strong>@Localizer["Email"]:</strong> @Model.Email</p>
                    <p style="color: #ccc; margin: 0 0 8px 0;"><strong>@Localizer["Roles"]:</strong> @string.Join(", ", Model.Roles)</p>
                </div>
            </div>
        </div>
        
        <hr style="border: none; border-top: 1px solid #23272a; margin: 32px 0;">
        
        <div>
            <h2 style="color: #fff; font-size: 2rem; font-weight: 700; margin-bottom: 32px;">@Localizer["Quickactions"]:</h2>
            <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(250px, 1fr)); gap: 24px;">
                <!-- Submit Template -->
                <a asp-controller="SubmitYourTemplate" asp-action="Index" style="text-decoration: none; color: inherit;">
                    <div style="background: #181a1b; border-radius: 16px; padding: 24px; border: 2px solid #23272a; cursor: pointer; transition: transform 0.2s; text-align: center;">
                        <div style="width: 60px; height: 60px; background: #00ff88; border-radius: 50%; display: flex; align-items: center; justify-content: center; margin: 0 auto 16px auto;">
                            <i class="ri-add-line" style="color: #111; font-size: 2rem;"></i>
                        </div>
                        <h4 style="color: #fff; font-size: 1.2rem; font-weight: 600; margin: 0 0 8px 0;">@Localizer["Addtemplate"]</h4>
                        <p style="color: #ccc; font-size: 0.9rem; margin: 0;">@Localizer["Upload"]</p>
                    </div>
                </a>
                
                <!-- My Templates - Only for Authors -->
                @if (Model.Roles.Contains("Author"))
                {
                    <a asp-controller="MyTemplates" asp-action="Index" style="text-decoration: none; color: inherit;">
                        <div style="background: #181a1b; border-radius: 16px; padding: 24px; border: 2px solid #23272a; cursor: pointer; transition: transform 0.2s; text-align: center;">
                            <div style="width: 60px; height: 60px; background: #00e0ff; border-radius: 50%; display: flex; align-items: center; justify-content: center; margin: 0 auto 16px auto;">
                                <i class="ri-palette-line" style="color: #111; font-size: 2rem;"></i>
                            </div>
                            <h4 style="color: #fff; font-size: 1.2rem; font-weight: 600; margin: 0 0 8px 0;">@Localizer["MyTemplates"]</h4>
                            <p style="color: #ccc; font-size: 0.9rem; margin: 0;">@Localizer["Viewandmanage"]</p>
                        </div>
                    </a>
                }
                
                <!-- Settings -->
                <a asp-controller="Settings" asp-action="Index" style="text-decoration: none; color: inherit;">
                    <div style="background: #181a1b; border-radius: 16px; padding: 24px; border: 2px solid #23272a; cursor: pointer; transition: transform 0.2s; text-align: center;">
                        <div style="width: 60px; height: 60px; background: #ff6b6b; border-radius: 50%; display: flex; align-items: center; justify-content: center; margin: 0 auto 16px auto;">
                            <i class="ri-settings-3-line" style="color: #111; font-size: 2rem;"></i>
                        </div>
                        <h4 style="color: #fff; font-size: 1.2rem; font-weight: 600; margin: 0 0 8px 0;">@Localizer["Settings"]</h4>
                        <p style="color: #ccc; font-size: 0.9rem; margin: 0;">@Localizer["Manageyouraccount"]</p>
                    </div>
                </a>
            </div>
        </div>
    </div>
</div>



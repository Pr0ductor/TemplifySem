@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer
@model Templify.mvc.Models.EditProductModel
@{ ViewData["Title"] = @Localizer["EditTemplate"]; }

<div style="max-width: 800px; margin: 0 auto; padding: 40px 20px;">
    <!-- Header Section -->
    <div style="text-align: center; margin-bottom: 40px;">
        <h1 style="color: #00ff88; font-size: 2.5rem; font-weight: 800; margin-bottom: 16px;">
            <i class="ri-edit-line" style="margin-right: 12px;"></i>@Localizer["EditTemplate"]
        </h1>
        <p style="color: #ccc; font-size: 1.1rem; max-width: 600px; margin: 0 auto; line-height: 1.5;">
            @Localizer["Updateyourtemplate"]
        </p>
    </div>

    <!-- Edit Form Section -->
    <div style="background: #181a1b; border-radius: 24px; padding: 40px; border: 2px solid #23272a;">
        <form asp-action="Edit" method="post" class="edit-form" enctype="multipart/form-data">
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="ImageUrl" />

            <!-- Current Image Preview -->
            <div style="text-align: center; margin-bottom: 32px;" class="current-image">
                <h3 style="color: #fff; font-size: 1.2rem; margin-bottom: 16px;">@Localizer["CurrentImage"]</h3>
                <div style="width: 200px; height: 150px; border-radius: 16px; overflow: hidden; background: #232526; margin: 0 auto; border: 2px solid #333;">
                    <img src="@Url.Content(Model.ImageUrl)" alt="Current template image" style="width: 100%; height: 100%; object-fit: cover;">
                </div>
                <p style="color: #666; font-size: 0.9rem; margin-top: 8px;">@Localizer["CurrentImage"]</p>
            </div>

            <!-- New Image Upload -->
            <div class="form-group">
                <label class="form-label">@Localizer["NewImage"]</label>
                <input type="file" name="newImage" accept=".jpg,.jpeg,.png,.gif" class="form-control" style="padding: 8px;" />
                <small style="color: #666; font-size: 0.85rem; margin-top: 4px; display: block;">
                    @Localizer["Supportedformats"]
                </small>
            </div>

            <!-- Form Fields -->
            <div class="form-group">
                <label asp-for="Name" class="form-label">@Localizer["TemplateName"] *</label>
                <input asp-for="Name" class="form-control" placeholder="@Localizer["Entertemplatename"]" />
                <span asp-validation-for="Name" class="validation-error"></span>
            </div>

            <div class="form-group">
                <label asp-for="Description" class="form-label">@Localizer["Description"] *</label>
                <textarea asp-for="Description" class="form-control" rows="6" placeholder="@Localizer["Describeyourtemplate"]"></textarea>
                <span asp-validation-for="Description" class="validation-error"></span>
            </div>

            <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 20px;">
                <div class="form-group">
                    <label asp-for="Price" class="form-label">@Localizer["Price"] *</label>
                    <input asp-for="Price" class="form-control" type="number" step="0.01" min="0.01" max="9999.99" placeholder="0.00" />
                    <span asp-validation-for="Price" class="validation-error"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Category" class="form-label">@Localizer["Category"] *</label>
                    <select asp-for="Category" class="form-control">
                        <option value="">@Localizer["Selectcategory"]</option>
                        <option value="business">@Localizer["Business"]</option>
                        <option value="3d web">@Localizer["3DWeb"]</option>
                        <option value="saas platforms">@Localizer["SaaSPlatforms"]</option>
                        <option value="agency">@Localizer["Agency"]</option>
                        <option value="portfolio design">@Localizer["PortfolioDesign"]</option>
                        <option value="ecommerce">@Localizer["Ecommerce"]</option>
                        <option value="education">@Localizer["Education"]</option>
                        <option value="health">@Localizer["Health"]</option>
                        <option value="marketing">@Localizer["Marketing"]</option>
                        <option value="restaurant & food">@Localizer["RestaurantFood"]</option>
                        <option value="gaming & entertainment">@Localizer["GamingEntertainment"]</option>
                        <option value="real estate">@Localizer["RealEstate"]</option>
                    </select>
                    <span asp-validation-for="Category" class="validation-error"></span>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="Tags" class="form-label">@Localizer["Tags"]</label>
                <input asp-for="Tags" class="form-control" placeholder="@Localizer["Entertags"]" />
                <span asp-validation-for="Tags" class="validation-error"></span>
            </div>

            <!-- Form Actions -->
            <div style="display: flex; justify-content: center; gap: 20px; margin-top: 40px;">
                <a asp-controller="MyTemplates" asp-action="Index" style="text-decoration: none;">
                    <button type="button" style="background: #23272a; color: #fff; border: 1px solid #333; border-radius: 12px; padding: 16px 32px; font-weight: 700; font-size: 1.1rem; cursor: pointer; min-width: 150px;">
                        <i class="ri-arrow-left-line" style="margin-right: 8px;"></i>@Localizer["Cancel"]
                    </button>
                </a>
                <button type="submit" style="background: linear-gradient(90deg, #00ff88 0%, #00e0ff 100%); color: #111; border: none; border-radius: 12px; padding: 16px 32px; font-weight: 700; font-size: 1.1rem; cursor: pointer; min-width: 150px;">
                    <i class="ri-save-line" style="margin-right: 8px;"></i>@Localizer["SaveChanges"]
                </button>
            </div>
        </form>
    </div>
</div>

<style>
    .edit-form {
        max-width: 100%;
    }

    .form-group {
        margin-bottom: 24px;
    }

    .form-label {
        display: block;
        color: #fff;
        font-weight: 600;
        margin-bottom: 8px;
        font-size: 0.95rem;
    }

    .form-label::after {
        content: " *";
        color: #ff6b6b;
    }

    .form-label:has(+ .form-control:not([required]))::after {
        content: "";
    }

    .form-control {
        width: 100%;
        padding: 12px 16px;
        background: #232526;
        border: 2px solid #333;
        border-radius: 12px;
        color: #fff;
        font-size: 1rem;
        transition: all 0.3s ease;
    }

    .form-control:focus {
        outline: none;
        border-color: #00ff88;
        box-shadow: 0 0 0 3px rgba(0, 255, 136, 0.1);
    }

    .form-control::placeholder {
        color: #666;
    }

    textarea.form-control {
        resize: vertical;
        min-height: 120px;
    }

    .validation-error {
        color: #ff6b6b;
        font-size: 0.85rem;
        margin-top: 6px;
        display: flex;
        align-items: center;
        gap: 6px;
    }

    .validation-error::before {
        content: "âš ";
        font-size: 1rem;
    }

    /* Responsive Design */
    @@media (max-width: 768px) {
        .edit-form {
            padding: 20px;
        }
        
        .form-group {
            margin-bottom: 20px;
        }
        
        .form-control {
            padding: 10px 14px;
            font-size: 0.95rem;
        }
        
        .form-actions {
            flex-direction: column;
            gap: 16px;
        }
        
        .btn-primary,
        .btn-secondary {
            width: 100%;
        }
    }
    
    @@media (max-width: 480px) {
        .edit-form {
            padding: 16px;
        }
        
        .form-control {
            padding: 8px 12px;
            font-size: 0.9rem;
        }
    }
</style>

@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    
    <script>
        // Preview new image when file is selected
        document.querySelector('input[name="newImage"]').addEventListener('change', function(e) {
            const file = e.target.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = function(e) {
                    const previewImg = document.querySelector('.current-image img');
                    previewImg.src = e.target.result;
                    
                    // Update the label
                    const label = document.querySelector('.current-image p');
                    label.textContent = 'New image preview';
                    label.style.color = '#00ff88';
                };
                reader.readAsDataURL(file);
            }
        });
        
        // Reset preview when form is reset
        document.querySelector('form').addEventListener('reset', function() {
            const previewImg = document.querySelector('.current-image img');
            previewImg.src = '@Url.Content(Model.ImageUrl)';
            
            const label = document.querySelector('.current-image p');
            label.textContent = 'Current image';
            label.style.color = '#666';
        });
    </script>
}

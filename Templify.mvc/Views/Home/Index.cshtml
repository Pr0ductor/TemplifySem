@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer
@model Templify.mvc.Models.HomeViewModel
@{
    ViewData["Title"] = @Localizer["Home"];
}

@if (TempData["SuccessMessage"] != null)
{
    <div style="background: linear-gradient(135deg, #00ff88 0%, #00e0ff 100%); color: #111; padding: 16px; text-align: center; font-weight: 600; margin-bottom: 0;">
        @TempData["SuccessMessage"]
    </div>
}

<section class="hero">
    <div class="hero__bg"></div>
    <div class="hero__badge">@Localizer["OverPremadeFramerTemplates"]</div>
    <h1><span class="highlight">@Localizer["Sell"]</span> @Localizer["HighQuality"]<br>@Localizer["WebsiteTemplates"]</h1>
    <p class="hero__desc">
        @Localizer["Withateam"]
    </p>
    <div class="hero__search">
        <form id="searchForm" style="display: flex; gap: 10px; width: 100%; max-width: 500px;">
            <input type="text" id="searchInput" name="search" placeholder="@Localizer["CreativeAgencyTemplate"]" style="flex: 1; padding: 15px 20px; border: none; border-radius: 10px; font-size: 16px; background: rgba(255, 255, 255, 0.1); color: #fff; backdrop-filter: blur(10px);">
            <button type="submit" style="padding: 15px 30px; border: none; border-radius: 10px; background: linear-gradient(135deg, #00ff88 0%, #00e0ff 100%); color: #111; font-weight: 600; font-size: 16px; cursor: pointer; transition: transform 0.2s;">@Localizer["SearchNow"]</button>
        </form>
    </div>
</section>

<!-- Top Categories -->

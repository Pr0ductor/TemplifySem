</section>

<style>
    .category-card {
        cursor: pointer;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        position: relative;
        overflow: hidden;
    }
    .category-card::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: linear-gradient(135deg, rgba(0, 255, 136, 0.1) 0%, rgba(0, 224, 255, 0.1) 100%);
        opacity: 0;
        transition: opacity 0.3s ease;
        z-index: 1;
        pointer-events: none;
    }
    .category-card:hover::before {
        opacity: 1;
    }
    .category-card:active {
        transform: translateY(-2px) scale(0.98);
    }
    .category-card * {
        position: relative;
        z-index: 2;
    }
    
    /* Стили для поиска */
    .hero__search input::placeholder {
        color: rgba(255, 255, 255, 0.7);
    }
    
    .hero__search input:focus {
        outline: none;
        box-shadow: 0 0 0 2px rgba(0, 255, 136, 0.5);
    }
    
    .hero__search button:hover {
        transform: translateY(-2px);
    }
</style>
<script>
    document.addEventListener('DOMContentLoaded', function() {
        const categoryCards = document.querySelectorAll('.category-card');
        
        // Маппинг data-category в правильные названия категорий
        const categoryMapping = {
            'business': 'Business',
            'threedweb': '3D Web',
            'saasplatforms': 'Saas Platforms',
            'agency': 'Agency',
            'portfoliodesign': 'Portfolio Design',
            'ecommerce': 'Ecommerce',
            'education': 'Education',
            'health': 'Health',
            'marketing': 'Marketing',
            'restaurantandfood': 'Restaurant & Food',
            'gamingandentertainment': 'Gaming & Entertainment',
            'realestate': 'Real Estate'
        };
        
        categoryCards.forEach(card => {
            card.addEventListener('click', function() {
                const categoryKey = this.getAttribute('data-category');
                const categoryName = categoryMapping[categoryKey];
                
                if (categoryName) {
                    // Добавляем эффект нажатия
                    this.style.transform = 'translateY(-2px) scale(0.98)';
                    
                    // Перенаправляем на страницу продуктов с фильтром по категории
                    setTimeout(() => {
                        window.location.href = `/Products?category=${encodeURIComponent(categoryName)}`;
                    }, 150);
                }
            });
            
            // Убираем эффект нажатия при отпускании
            card.addEventListener('mouseup', function() {
                this.style.transform = '';
            });
            
            card.addEventListener('mouseleave', function() {
                this.style.transform = '';
            });
        });
    });
    
    // Обработка формы поиска
    document.getElementById('searchForm').addEventListener('submit', function(e) {
        e.preventDefault();
        
        const searchTerm = document.getElementById('searchInput').value.trim();
        
        if (searchTerm) {
            // Перенаправляем на страницу продуктов с поисковым запросом
            window.location.href = `/Products?search=${encodeURIComponent(searchTerm)}`;
        }
    });
</script>

<!-- Trending Products -->
<section class="trending">
    <div class="section-header">
        <h2>@Localizer["TrendingProducts"]</h2>
        <a asp-controller="Products" asp-action="Index" class="browse-all">@Localizer["BrowseAll"] <i class="ri-arrow-right-up-line"></i></a>
    </div>
    <div class="trending__grid">
        @foreach (var product in Model.Products)
        {
            <a asp-controller="Products" asp-action="Product" asp-route-id="@product.Id" style="text-decoration: none; color: inherit;">
                <div class="product-card">
                    <div class="product-card__img">
                        <img src="@Url.Content(product.ImageUrl)" alt="@product.Name" />
                        <div class="product-card__price">$@product.Price</div>
                    </div>
                    <div class="product-card__meta">
                        <span class="product-card__author">@product.Author</span>
                        <span class="product-card__name">@product.Name</span>
                    </div>
                </div>
            </a>
        }
    </div>
</section>

<!-- Our Top Authors -->
<section class="authors">
    <div class="section-header">
        <h2>@Localizer["OurTopAuthors"]</h2>
        <a asp-controller="Authors" asp-action="Index" class="browse-all">@Localizer["BrowseAll"] <i class="ri-arrow-right-up-line"></i></a>
    </div>
    <div class="authors__grid">
        @foreach (var author in Model.Authors)
        {
            <a asp-controller="Authors" asp-action="Author" asp-route-id="@author.Id" style="text-decoration: none; color: inherit;">
                <div class="author-card">
                    <div class="author-card__icon">
                        <img src="@Url.Content(author.AvatarUrl)" alt="@author.Name" />
                    </div>
                    <div class="author-card__info">
                        <div class="author-card__name">@author.Name</div>
                        <div class="author-card__desc">@author.Specialization</div>
                        <div class="author-card__stats">
                            <span><i class="ri-flashlight-line"></i> @author.TotalProducts @Localizer["Products"]</span>
                            <span><i class="ri-download-line"></i> @Localizer["Over"] @author.TotalDownloads @Localizer["Downloads"]</span>
                        </div>
                    </div>
                </div>
            </a>
        }
    </div>
</section>


            <div class="category-card__title">@Localizer["SaasPlatforms"]</div>
            <div class="category-card__desc">@Localizer["ReadyMadeTemplates"]</div>
            <div class="category-card__images">
                <img src="~/src/img/tem7.png" alt="Saas 1" />

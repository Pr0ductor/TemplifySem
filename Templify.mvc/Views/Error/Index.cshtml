  @inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer
@{
    ViewData["Title"] = @Localizer["Error"];
}
<style>
    .error-container {
        min-height: 60vh;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        background: #181a1b;
        border-radius: 20px;
        margin: 40px auto;
        max-width: 480px;
        box-shadow: 0 4px 24px rgba(0,0,0,0.18);
        padding: 40px 24px;
    }
    .error-icon {
        font-size: 3.5rem;
        color: #ff6b6b;
        margin-bottom: 0.5em;
    }
    .error-title {
        color: #fff;
        font-size: 1.5rem;
        font-weight: 700;
        margin-bottom: 0.2em;
    }
    .error-desc {
        color: #ccc;
        font-size: 1rem;
        margin-bottom: 1.5em;
        text-align: center;
    }
    .error-btn {
        background: #00ff88;
        color: #111;
        font-weight: 700;
        border: none;
        border-radius: 10px;
        padding: 12px 28px;
        font-size: 1rem;
        text-decoration: none;
        transition: background 0.2s;
    }
    .error-btn:hover {
        background: #00e0ff;
        color: #111;
    }
</style>
<div class="error-container">
    <div class="error-icon"><i class="ri-error-warning-line"></i></div>
    <div class="error-title">@Localizer["Oops"]</div>
    <div class="error-desc">@Localizer["Anerroroccurred"]</div>
    <a href="/" class="error-btn">@Localizer["GotoHome"]</a>
</div>
<link href="https://cdn.jsdelivr.net/npm/remixicon@3.5.0/fonts/remixicon.css" rel="stylesheet">

<style>
    .category-card {
        cursor: pointer;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        position: relative;
        overflow: hidden;
    }
    
    .category-card::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: linear-gradient(135deg, rgba(0, 255, 136, 0.1) 0%, rgba(0, 224, 255, 0.1) 100%);
        opacity: 0;
        transition: opacity 0.3s ease;
        z-index: 1;
        pointer-events: none;
    }
    
    .category-card:hover::before {
        opacity: 1;
    }
    
    .category-card:active {
        transform: translateY(-2px) scale(0.98);
    }
    
    .category-card * {
        position: relative;
        z-index: 2;
    }
</style>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        const categoryCards = document.querySelectorAll('.category-card');
        
        // Маппинг data-category в правильные названия категорий
        const categoryMapping = {
            'business': 'Business',
            'threedweb': '3D Web',
            'saasplatforms': 'Saas Platforms',
            'agency': 'Agency',
            'portfoliodesign': 'Portfolio Design',
            'ecommerce': 'Ecommerce',
            'education': 'Education',
            'health': 'Health',
            'marketing': 'Marketing',
            'restaurantandfood': 'Restaurant & Food',
            'gamingandentertainment': 'Gaming & Entertainment',
            'realestate': 'Real Estate'
        };
        
        categoryCards.forEach(card => {
            card.addEventListener('click', function() {
                const categoryKey = this.getAttribute('data-category');
                const categoryName = categoryMapping[categoryKey];
                
                if (categoryName) {
                    // Добавляем эффект нажатия
                    this.style.transform = 'translateY(-2px) scale(0.98)';
                    
                    // Перенаправляем на страницу продуктов с фильтром по категории
                    setTimeout(() => {
                        window.location.href = `/Products?category=${encodeURIComponent(categoryName)}`;
                    }, 150);
                }
            });
            
            // Убираем эффект нажатия при отпускании
            card.addEventListener('mouseup', function() {
                this.style.transform = '';
            });
            
            card.addEventListener('mouseleave', function() {
                this.style.transform = '';
            });
        });
    });
</script>

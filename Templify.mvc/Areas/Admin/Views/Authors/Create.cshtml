@model Templify.Application.Features.Authors.Commands.CreateAuthorCommand
@{
    ViewData["Title"] = "Добавить автора";
    Layout = "_AdminLayout";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">Добавить нового автора</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post" enctype="multipart/form-data">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="DisplayName" class="form-label">Имя автора *</label>
                                    <input asp-for="DisplayName" class="form-control" required />
                                    <span asp-validation-for="DisplayName" class="text-danger"></span>
                                </div>
                            </div>
                            
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Email" class="form-label">Email *</label>
                                    <input asp-for="Email" type="email" class="form-control" required />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Specialization" class="form-label">Специализация *</label>
                                    <input asp-for="Specialization" class="form-control" required />
                                    <span asp-validation-for="Specialization" class="text-danger"></span>
                                </div>
                            </div>
                            
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="UserId" class="form-label">Привязать к пользователю</label>
                                    <select asp-for="UserId" class="form-control">
                                        @foreach (var user in ViewBag.Users)
                                        {
                                            <option value="@user.Value">@user.Text</option>
                                        }
                                    </select>
                                    <small class="form-text text-muted">Выберите пользователя для привязки или оставьте "Без привязки" для сидового автора</small>
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="form-label">Аватар автора</label>
                            <input type="file" name="avatarFile" class="form-control" accept="image/*" />
                            <small class="form-text text-muted">Загрузите изображение или оставьте пустым</small>
                        </div>

                        <div class="form-group">
                            <label asp-for="Description" class="form-label">Описание</label>
                            <textarea asp-for="Description" class="form-control" rows="4" placeholder="Краткое описание автора..."></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="form-actions">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i> Создать автора
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Назад к списку
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .form-actions {
        margin-top: 2rem;
        padding-top: 1rem;
        border-top: 1px solid #e3e6f0;
    }
    
    .form-actions .btn {
        margin-right: 0.5rem;
    }
    
    .form-group {
        margin-bottom: 1.5rem;
    }
    
    .form-label {
        font-weight: 600;
        color: #5a5c69;
        margin-bottom: 0.5rem;
    }
    
    .form-control {
        border-radius: 0.35rem;
        border: 1px solid #d1d3e2;
    }
    
    .form-control:focus {
        border-color: #bac8f3;
        box-shadow: 0 0 0 0.2rem rgba(78, 115, 223, 0.25);
    }
    
    .text-danger {
        font-size: 0.875rem;
        margin-top: 0.25rem;
    }
    
    .form-text {
        font-size: 0.875rem;
        color: #858796;
    }
</style>

@section Scripts {
    <script>
        // Обработка загрузки файла
        document.querySelector('input[name="avatarFile"]').addEventListener('change', function(e) {
            const file = e.target.files[0];
            if (file) {
                console.log('Файл выбран:', file.name);
            }
        });
    </script>
}
